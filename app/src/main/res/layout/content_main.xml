<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovileNet SSD Vol1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtMobilenetssd"/>

    <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    >
    </FrameLayout>
    <ImageView
            android:id="@+id/imageBase"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="@string/confidence"
            app:layout_constraintBottom_toBottomOf="@+id/imageBase"
            app:layout_constraintEnd_toEndOf="@+id/imageBase"
            app:layout_constraintStart_toStartOf="@+id/imageBase"
            app:layout_constraintTop_toTopOf="@+id/imageBase"
            app:layout_constraintVertical_bias="0.0" />
    <TextView
            android:text="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtConfidence"
            app:layout_constraintBottom_toBottomOf="@+id/btnConfidenceLess"
            android:background="#F9F9F9"
            android:layout_marginBottom="8dp"
            android:alpha="1" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnConfidenceLess"
            app:layout_constraintEnd_toStartOf="@+id/btnConfidenceMore"
            app:layout_constraintStart_toEndOf="@+id/btnConfidenceLess"/>

    <Button
            android:id="@+id/btnConfidenceLess"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.7"
            android:text="-"
            android:background="@drawable/ic_remove_circle_outline_black_48dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageBase"
            app:layout_constraintEnd_toEndOf="@+id/imageBase"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageBase"
            app:layout_constraintTop_toTopOf="@+id/imageBase"
            app:layout_constraintVertical_bias="0.110000014" />
    <Button
            android:text="+"
            android:background="@drawable/ic_add_circle_outline_black_48dp"
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/btnConfidenceMore"
            app:layout_constraintStart_toEndOf="@+id/btnConfidenceLess" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnConfidenceLess"
            app:layout_constraintBottom_toBottomOf="@+id/btnConfidenceLess"
            app:layout_constraintEnd_toEndOf="@+id/imageBase" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:alpha="0.7"/>
    <Button
            android:text=""
            android:background="@drawable/ic_zoom_out_black_48dp"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnZoomLess"
            app:layout_constraintBottom_toBottomOf="@+id/imageBase"
            app:layout_constraintStart_toStartOf="@+id/imageBase" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/btnConfidenceLess"
            android:alpha="0.5"/>
    <Button
            android:text=""
            android:background="@drawable/ic_zoom_in_black_48dp"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnZoomMore"
            app:layout_constraintBottom_toBottomOf="@+id/imageBase" app:layout_constraintEnd_toEndOf="@+id/imageBase"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageBase" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/btnConfidenceMore"
            android:alpha="0.5"/>


</android.support.constraint.ConstraintLayout>